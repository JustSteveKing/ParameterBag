{
    "name": "juststeveking/parameterbag",
    "description": "A flexible parameter bag in place of standard arrays on PHP classes",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "phpstan/phpstan": "^0.12.25",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Steve McDougall",
            "email": "juststeveking@gmail.com",
            "role": "developer",
            "homepage": "https://www.juststeveking.uk"
        }
    ],
    "require": {
        "php": "~7.4|^8.0"
    },
    "autoload": {
        "psr-4": {
            "JustSteveKing\\ParameterBag\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JustSteveKing\\Tests\\ParameterBag\\": "tests/"
        }
    },
    "scripts": {
        "test:unit": "phpdbg -qrr ./vendor/bin/phpunit --coverage-html build/coverage-report -d memory_limit=512M --testdox",
        "test": [
            "@test:unit"
        ],
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    }
}
